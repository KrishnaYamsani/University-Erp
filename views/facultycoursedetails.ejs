<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Course Details</title>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Top Bar Start -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom border-2 border-gray px-4 py-2 fixed-top">
        <div class="container-fluid">
            <div class="navbar-nav ms-auto">
                <div class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="img/user.jpg" alt="Profile" class="rounded-circle" style="width: 40px; height: 40px;">
                    </a>
                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                        <li><a class="dropdown-item" href="#">Profile</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#">Logout</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <!-- Top Bar End -->
    
    

    <div class="container-xxl position-relative bg-white d-flex p-0">
  
        <!-- Sidebar Start -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-light navbar-light">
                <a href="faculty_index.html" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary"><i class="fa fa-hashtag me-2"></i>DASHMIN</h3>
                </a>
                <div class="d-flex align-items-center ms-4 mb-4">
                    <div class="position-relative">
                        <img class="rounded-circle" src="img/user.jpg" alt="" style="width: 40px; height: 40px;">
                        <div class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"></div>
                    </div>
                    <div class="ms-3">
                        <h6 class="mb-0"><%= userName %></h6>
                        <span>Faculty</span>
                    </div>
                </div>
                <div class="navbar-nav w-100">
                    <!-- <a href="/faculty/facultydetails/1" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a> -->
                    <a href="/faculty/facultydetails/facultyid/1" class="nav-item nav-link"><i class="fa fa-user me-2"></i>Profile</a>
                    <a href="/faculty/allfacultydetails/facultyid/1" class="nav-item nav-link"><i class="fa fa-user me-2"></i>Faculty Details</a>
                    <a href="/faculty/courses/faculty_id/1" class="nav-item nav-link"><i class="fa fa-book me-2"></i>Courses</a>
                </div>
            </nav>
        </div>
        <!-- Sidebar End -->

        <!-- Content Start -->
        <div class="content">
            <!-- Greeting Message -->
            <div class="container-fluid px-6 py-4">
                <div class="row">
                    <div class="col-xl-12 mb-4">
                        <div class="d-flex align-items-center justify-content-between">
                            <h2>Welcome, <%= userName %>!</h2>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Course Details Table -->
            <div class="container-fluid px-6 py-4">
                <h3>Course Details</h3>
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Course ID</th>
                            <th>Course Name</th>
                            <th>Credits</th>
                            <th>Contact Hours</th>
                            <th>Prerequisite Course IDs</th>
                            <th>Attendance</th>
                            <th>Grades</th>
                            <th>Attendance Update</th> <!-- New Column -->
                        </tr>
                    </thead>
                    <tbody>
                        <% courseDetails.forEach(course => { %>
                            <tr>
                                <td><%= course.course_id %></td>
                                <td><%= course.course_name %></td>
                                <td><%= course.credits %></td>
                                <td><%= course.contact_hrs %></td>
                                <td><%= course.pre_requisite_course_ids %></td>
                                <td><button onclick="viewAttendance('<%= course.course_id %>')">Attendance</button></td>
                                <td><button onclick="viewGrades('<%= course.course_id %>')">Grades</button></td>
                                <td><button onclick="updateAttendance('<%= course.course_id %>')">Update</button></td> <!-- New Column -->
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
        <!-- Content End -->
    </div>
    
    <script>
        function viewAttendance(courseId) {
            window.location.href = `/faculty/coursestudents/attendance/course_id/${courseId}`;
        }

        function viewGrades(courseId) {
            window.location.href = `/faculty/coursestudents/givegrade/course_id/${courseId}`;
        }

        function updateAttendance(courseId) {
            window.location.href = `/faculty/coursestudents/giveattendance/course_id/${courseId}`; // Modify the URL as needed
        }
    </script>
    
    <!-- JavaScript Libraries -->
    <script src="lib/jquery/jquery.min.js"></script>
    <script src="lib/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="js/main.js"></script>
</body>
</html>
